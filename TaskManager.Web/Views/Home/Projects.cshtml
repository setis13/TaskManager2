@{
    ViewBag.Title = "Titles";
}
<div id="bodyContainer" ng-controller="ProjectController" ng-init="Init()">
    <div ui-view></div>
    <div class="row">
        <div class="col-xs-12">
            <div class="page-header">
                <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#dialogEditProject" ng-click="Add()">+ Add</button>
                <h2>@ViewBag.Title</h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div id="processingIndicator" class="ajax-loader" style="display: none;"></div>
            <table id="dtProjects" class="table table-striped table-bordered table-hover" role="grid" width="100%">
                <thead>
                    <tr role="row">
                        <th>ID</th>
                        <th>Created</th>
                        <th>Modified</th>
                        <th>Name</th>
                        <th style="width: 40px;"></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="dialogEditProject" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">{{Project.EntityId == '00000000-0000-0000-0000-000000000000' ? 'Create a new title' : 'Edit title: ' + Project.Name}}</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" role="form" name="projectForm">
                        <div class="form-group" ng-class="{ 'has-error': projectForm.Name.$invalid }">
                            <label for="inputName" class="col-sm-4 control-label">Name</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="inputName" name="Name" placeholder="Name" required ng-model="Project.Name">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" ng-show="!SubmitInProgress" ng-click="Submit(Project)" ng-disabled="projectForm.$invalid">Save changes</button>
                    <button type="button" class="btn btn-danger" ng-show="!SubmitInProgress && Project.EntityId != '00000000-0000-0000-0000-000000000000'" ng-click="Delete(Project.EntityId)">Delete</button>
                    <button type="button" class="btn btn-default" ng-show="!SubmitInProgress" data-dismiss="modal">Close</button>
                    <div class="btn" ng-show="SubmitInProgress">
                        <img src="~/Images/select2-spinner.gif" alt="Loading" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>