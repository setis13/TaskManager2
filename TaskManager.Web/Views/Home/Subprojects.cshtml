@{
    ViewBag.Title = "Projects";
}
<div id="bodyContainer" ng-controller="SubprojectController" ng-init="Init()">
    <div ui-view></div>
    <div class="row">
        <div class="col-xs-12">
            <div class="page-header">
                <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#dialogEditSubproject" ng-click="Add()">+ Add</button>
                <h2>@ViewBag.Title</h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div id="processingIndicator" class="ajax-loader" style="display: none;"></div>
            <table id="dtSubprojects" class="table table-striped table-bordered table-hover" role="grid" width="100%">
                <thead>
                    <tr role="row">
                        <th>ID</th>
                        <th>Created</th>
                        <th>Modified</th>
                        <th>Title</th>
                        <th>Name</th>
                        <th>Hours</th>
                        <th style="width: 40px;"></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="dialogEditSubproject" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">{{Subproject.EntityId == '00000000-0000-0000-0000-000000000000' ? 'Create a new project' : 'Edit project: ' + Subproject.Name}}</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" role="form" name="subprojectForm">
                        <div class="form-group" ng-class="{ 'has-error': subprojectForm.Title.$invalid }">
                            <label for="selectTitle" class="col-sm-4 control-label">Title</label>
                            <div class="col-sm-6">
                                <select class="form-control" id="selectTitle" name="Title" placeholder="Title" required ng-model="Subproject.ProjectId">
                                    <option ng-repeat="Project in Projects" ng-value="Project.EntityId">{{Project.Name}}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{ 'has-error': subprojectForm.Name.$invalid }">
                            <label for="inputName" class="col-sm-4 control-label">Name</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="inputName" name="Name" placeholder="Name" required ng-model="Subproject.Name">
                            </div>
                        </div>
                        <div class="form-group" ng-class="{ 'has-error': subprojectForm.Name.$invalid }">
                            <label for="inputHours" class="col-sm-4 control-label">Hours</label>
                            <div class="col-sm-6">
                                <input type="number" class="form-control" id="inputHours" name="Hours" placeholder="Hours" required ng-model="Subproject.Hours">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" ng-show="!SubmitInProgress" ng-click="Submit(Subproject)" ng-disabled="subprojectForm.$invalid">Save changes</button>
                    <button type="button" class="btn btn-danger" ng-show="!SubmitInProgress && Subproject.EntityId != '00000000-0000-0000-0000-000000000000'" ng-click="Delete(Subproject.EntityId)">Delete</button>
                    <button type="button" class="btn btn-default" ng-show="!SubmitInProgress" data-dismiss="modal">Close</button>
                    <div class="btn" ng-show="SubmitInProgress">
                        <img src="~/Images/select2-spinner.gif" alt="Loading" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>